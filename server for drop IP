using System;
using System.Text;
using System.Net;
using System.Net.Sockets;
using System.Threading;
using System.Collections;
using System.Collections.Generic;
namespace SocketTcpServer
{
    class Program
    {
        public static List<Socket> D = new List<Socket>();
        static void Main(string[] args)
        {           
            IPEndPoint ipPoint = new IPEndPoint(IPAddress.Parse("127.0.0.1"), 8005);
            Socket listenSocket = new Socket(AddressFamily.InterNetwork, SocketType.Stream, ProtocolType.Tcp);
            listenSocket.Bind(ipPoint);          
            listenSocket.Listen(2);
            while (true)
            {
                D.Add(listenSocket.Accept());
                //Console.WriteLine("Сервер запущен. Ожидание подключений...");
                if (D.Count > 1)
                {
                    // отправляем ответ
                    D[0].Send(Encoding.Unicode.GetBytes(D[1].RemoteEndPoint.ToString()+"&"+D[0].RemoteEndPoint.ToString()));
                    D[1].Send(Encoding.Unicode.GetBytes(D[0].RemoteEndPoint.ToString()+"&"+ D[1].RemoteEndPoint.ToString()));
                    D.Clear();
                   
                }
            }
          

        }
    }
}
